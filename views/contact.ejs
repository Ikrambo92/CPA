<%- include('./partials/head.ejs') %>


    <section class="text-gray-600 body-font relative pt-56 mt-36">
        <div class="absolute inset-0 bg-gray-300">
            <iframe style="filter: grayscale(1) contrast(1.2) opacity(0.7);" marginheight="0" marginwidth="0"
                title="map" scrolling="no"
                src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d9514.50671392146!2d-2.167821!3d53.4036177!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x487bb379743410ff%3A0xd53f784db07ab3a8!2s1%20Wellington%20Road%20North%20(Orbit%20Developments)!5e0!3m2!1sen!2suk!4v1718717514835!5m2!1sen!2suk"
                width="100%" height="100%" frameborder="0"></iframe>
        </div>
        <div class="container px-16 py-24 flex justify-center">

            <form action="/submission" method="post" id="contact-us" onsubmit="return validateForm()">
                <div
                    class="lg:w-1/2 md:w-2/3 bg-white rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0 relative z-10 shadow-md h-auto">

                    <h2 class="text-black text-lg mb-1 font-medium title-font">Contact Us</h2>
                    <p class="leading-relaxed mb-5 text-gray-600">Whether you're curious about our products, need
                        assistance, or have any feedback, we're just a message away.
                    </p>
                    <div class="relative mb-4">
                        <label for="email" class="leading-7 text-sm text-gray-600">Your Email:</label>
                        <input type="email" id="email" name="email" placeholder="Example: john.smith@email.com"
                            class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                    </div>
                    <div class="relative mb-4">
                        <label for="email" class="leading-7 text-sm text-gray-600">Your Subject:</label>
                        <input type="text" id="subject" name="subject" placeholder="Example: Arrange Phone Call"
                            class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                    </div>
                    
                    <div class="relative mb-4">
                        <label for="message" class="leading-7 text-sm text-gray-600">Message:</label>
                        <textarea id="message" name="message"
                            class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 h-32 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"></textarea>
                    </div>
                    <button
                        class="text-white bg-blue-800 border-0 py-2 px-6 focus:outline-none hover:bg-blue-800 rounded text-lg">Send</button>
                    <p class="text-xs text-gray-500 mt-3">Please fill in your details below, and we'll get back to you
                        as soon as possible.</p>
                    </>
                </div>
            </form>

    </section>

    <%- include('./partials/footer.ejs') %>